<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/redabstract"
    tools:context=".JewishCultureToastActivity" >

    <Button
        android:id="@+id/shabbat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shabbatones"
        android:layout_below="@+id/shabbatones"
        android:layout_toLeftOf="@+id/shabbatonesSwitch"
        android:text="Shabbat Committee"
        android:textColor="@color/white" />

    <Switch
        android:id="@+id/shabbatonesSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shabbatones"
        android:layout_alignBottom="@+id/shabbatones"
		android:switchTextAppearance="@style/SwitchTextAppearance"
        android:layout_alignParentRight="true"
        android:text=" " />

    <Switch
        android:id="@+id/transfersSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/transfers"
        android:switchTextAppearance="@style/SwitchTextAppearance"
        android:layout_alignBottom="@+id/transfers"
        android:layout_alignLeft="@+id/jBagelSwitch"
        android:text=" " />

    <Switch
        android:id="@+id/jBagelSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/jBagel"
        android:switchTextAppearance="@style/SwitchTextAppearance"
        android:layout_alignBottom="@+id/jBagel"
        android:layout_alignParentRight="true"
        android:text=" " />

    <Switch
        android:id="@+id/shabbatSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/shabbat"
        android:switchTextAppearance="@style/SwitchTextAppearance"
        android:layout_alignBottom="@+id/shabbat"
        android:layout_alignParentRight="true"
        android:text=" " />

    <Switch
        android:id="@+id/marketingSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/marketing"
        android:switchTextAppearance="@style/SwitchTextAppearance"
        android:layout_alignBottom="@+id/marketing"
        android:layout_alignParentRight="true"
        android:text=" " />

    <Button
        android:id="@+id/shabbatones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/marketing"
        android:layout_below="@+id/jBagelSwitch"
        android:layout_toLeftOf="@+id/shabbatonesSwitch"
        android:text="Penn Shabbatones"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/marketing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transfers"
        android:layout_toLeftOf="@+id/marketingSwitch"
        android:textColor="@color/white"
        android:text="Marketing Committee" />

    <Button
        android:id="@+id/transfers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shabbat"
        android:layout_below="@+id/shabbat"
        android:layout_toLeftOf="@+id/transfersSwitch"
        android:textColor="@color/white"
        android:text="Penn Transfers" />

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/jBagelSwitch"
        android:layout_marginTop="58dp"
        android:gravity="center"
        android:text="Select which Jewish culture communities you&apos;d like to receive notifications from."
        android:textColor="@color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/jBagel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/marketing"
        android:layout_alignRight="@+id/shabbatones"
        android:layout_below="@+id/intro"
        android:layout_marginTop="61dp"
        android:text="J-Bagel"
        android:textColor="@color/white" />

</RelativeLayout>
