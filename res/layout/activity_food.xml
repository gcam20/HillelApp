<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redbluewhite"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FoodActivity" >
    
    <TextView
        android:id="@+id/hoursHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Falk Dining Hall Hours: "
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" >
        
    </TextView>
    
    <TextView
        android:id="@+id/diningHours"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Falk Dining Hall Hours: "
        android:textColor="@color/white"
        android:textSize="20dp" >
        
    </TextView>

    <Button
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/diningHours"
        android:layout_below="@+id/diningHours"
        android:layout_marginTop="56dp"
        android:textColor="@color/white"
        android:text="Today's Menu" />

    <Button
        android:id="@+id/shabbat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/menu"
        android:layout_alignRight="@+id/menu"
        android:layout_below="@+id/menu"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Sign Up For Shabbat" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shabbat"
        android:layout_below="@+id/shabbat"
        android:layout_marginTop="18dp"
        android:src="@drawable/soup" />

</RelativeLayout>